{
	"name": "ripple-live-workspace",
	"version": "0.0.1",
	"private": false,
	"description": "",
	"type": "module",
	"scripts": {
		"watch:lib": "pnpm --filter ripple-live run watch",
		"watch:app": "pnpm --filter ripple-app run dev",
		"dev": "pnpm dlx npm-run-all2 --parallel watch:**",
		"test:lib": "pnpm --filter ripple-live run test",
		"test:app": "pnpm --filter ripple-app run test",
		"test": "pnpm dlx npm-run-all2 --parallel test:**",
		"build" : "pnpm --filter ripple-live run build",
		"patch:lib": "cd packages/ripple-live && npm run patch",
		"patch": "pnpm dlx npm-run-all2 --parallel patch:**",
		"release:lib": "cd packages/ripple-live && npm run release",
		"release": "pnpm dlx npm-run-all2 --parallel release:**"
	},
	"license": "MIT",
	"devDependencies": {
		"@ripple-ts/eslint-plugin": "latest",
		"@ripple-ts/prettier-plugin": "latest",
		"@ripple-ts/typescript-plugin": "latest",
		"@ripple-ts/vite-plugin": "latest",
		"jsdom": "^27.2.0",
		"prettier": "^3.6.2",
		"typescript": "^5.9.2",
		"vite": "^7.1.7",
		"vitest": "^3.2.4",
		"@vitest/coverage-v8": "^3.2.4",
    	"vite-plugin-dts": "^4.5.4"
	}
}
